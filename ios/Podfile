platform :ios, '16.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. Run 'flutter pub get' first."
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
    end
  end

  # Ensure we have permission to patch WeScan
  we_scan_path = 'Pods/WeScan/WeScan/ImageScannerController.swift'
  if File.exist?(we_scan_path)
    begin
      system("chmod 777 #{we_scan_path}")
      text = File.read(we_scan_path)
      text.gsub!(/@available\(\*, *unavailable[^)]*\)\s*public var [^{]*\n/m, '')
      unless text.include?('public var originalImage:')
        text << "\npublic var originalImage: UIImage? { get { return nil } set { } }\n"
        text << "public var scannedImage: UIImage? { get { return nil } set { } }\n"
        text << "public var enhancedImage: UIImage? { get { return nil } set { } }\n"
        text << "public var doesUserPreferEnhancedImage: Bool { get { return false } set { } }\n"
      end
      File.write(we_scan_path, text)
      puts "✅ WeScan patch applied successfully."
    rescue => e
      puts "⚠️ Failed to patch WeScan: #{e}"
    end
  else
    puts "ℹ️ WeScan file not found — skipping patch."
  end
end